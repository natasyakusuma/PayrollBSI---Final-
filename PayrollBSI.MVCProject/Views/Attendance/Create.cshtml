@if (ViewBag.Attendances != null)
{
	<div class="container mt-4">
		<h2>Create Attendance</h2>
		<form asp-action="CreatePost" asp-controller="Attendance" method="post">
			<div class="form-group">
				<label for="EmployeeId">Employee Name</label>
				<select class="form-control" id="EmployeeId" name="EmployeeId">
					<option value="">Select Employee</option>
					@foreach (var attendance in ViewBag.Attendances)
					{
						<option value="@attendance.Value">
							@(attendance.Text)
						</option>
					}
				</select>
			</div>
			<div class="form-group">
				<label for="OvertimeHours">Overtime Hours</label>
				<input type="text" class="form-control" id="OvertimeHours" name="OvertimeHours">
			</div>
			<div class="form-group">
				<label for="RegularHours">Regular Hours</label>
				<input type="text" class="form-control" id="RegularHours" name="RegularHours">
			</div>
			<div class="form-group">
				<label for="AttendanceTotal">Attendance Total</label>
				<input type="text" class="form-control" id="AttendanceTotal" name="AttendanceTotal">
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
}
else
{
	<p>No attendance records found.</p>
}

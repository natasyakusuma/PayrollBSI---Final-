@model IEnumerable<PayrollBSI.MVCProject.Models.PayrollDetailsModel>

@{
    ViewData["Title"] = "Payroll Details List";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<!-- Adding link to Bootstrap CSS -->
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title">Payroll Details List</h5>
                        </div>
                        <div class="col text-right">
                            <a href="@Url.Action("Create", "PayrollDetails")" class="btn btn-primary">Create</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>Employee Name</th>
                                <th>Payroll Date</th>
                                <th>Total Allowances</th>
                                <th>Total Deductions</th>
                                <th>Gross Pay</th>
                                <th>Net Pay (No Tax)</th>
                                <th>Net Pay (With Tax)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payrollDetail in Model)
                            {
                                <tr>
                                    <td>@payrollDetail.Employee.FirstName @payrollDetail.Employee.LastName</td>
                                    <td>@payrollDetail.PayrollDate.ToShortDateString()</td>
                                    <td>@payrollDetail.TotalAllowances</td>
                                    <td>@payrollDetail.TotalDeductions</td>
                                    <td>@payrollDetail.GrossPay</td>
                                    <td>@payrollDetail.NetPayNoTax</td>
                                    <td>@payrollDetail.NetPayWithTax</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<PayrollBSI.MVCProject.Models.PositionModel>

@foreach (var position in Model)
{
    <div class="modal fade" id="editModal@(position.PositionId)" tabindex="-1" role="dialog" aria-labelledby="editModalLabel@(position.PositionId)" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel@(position.PositionId)">Edit Position</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Form for editing position -->
                    <form asp-controller="Position" asp-action="Edit" asp-route-id="@position.PositionId" method="post">
                        <div class="form-group">
                            <label for="editPositionName">Position Name</label>
                            <input type="text" class="form-control" id="editPositionName" name="PositionName" value="@position.PositionName">
                        </div>
                        <div class="form-group">
                            <label for="editAllowanceMeal">Allowance Meal</label>
                            <input type="text" class="form-control" id="editAllowanceMeal" name="AllowanceMeal" value="@position.AllowanceMeal">
                        </div>
                        <div class="form-group">
                            <label for="editAllowanceTransport">Allowance Transport</label>
                            <input type="text" class="form-control" id="editAllowanceTransport" name="AllowanceTransport" value="@position.AllowanceTransport">
                        </div>
                        <div class="form-group">
                            <label for="editDeductionPension">Deduction Pension</label>
                            <input type="text" class="form-control" id="editDeductionPension" name="DeductionPension" value="@position.DeductionPension">
                        </div>
                        <div class="form-group">
                            <label for="editDeductionInsurance">Deduction Insurance</label>
                            <input type="text" class="form-control" id="editDeductionInsurance" name="DeductionInsurance" value="@position.DeductionInsurance">
                        </div>
                        <div class="form-group">
                            <label for="editPayrateOvertime">Payrate Overtime</label>
                            <input type="text" class="form-control" id="editPayrateOvertime" name="PayrateOvertime" value="@position.PayrateOvertime">
                        </div>
                        <div class="form-group">
                            <label for="editPayrateRegular">Payrate Regular</label>
                            <input type="text" class="form-control" id="editPayrateRegular" name="PayrateRegular" value="@position.PayrateRegular">
                        </div>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>

                    <!-- Display TempData message -->
                    @if (TempData.ContainsKey("message"))
                    {
                        <div class="alert alert-success" role="alert">
                            @Html.Raw(TempData.Peek("message"))
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
